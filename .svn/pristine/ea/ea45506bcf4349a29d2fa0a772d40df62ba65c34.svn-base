/* src/assets/css/admin/pages/AdminCommon.css */
@import url("https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css");

/* ★ 중요: 이 클래스 내부에서만 변수와 스타일이 적용됨 !! 가장 위에 div 클래스로 생성해야함 */
.admin-content-wrapper {
    /* 1. 공통 테마 변수 */
    --adm-bg: #F7FAFC;           /* 전체 배경 */
    --adm-white: #ffffff;
    --adm-text: #2D3748;         /* 진한 회색 */
    --adm-sub-text: #718096;     /* 연한 회색 */
    --adm-primary: #3182CE;      /* 메인 파랑 */
    --adm-primary-dark: #2C5282; /* 진한 파랑 (제목용) */
    --adm-border: #E2E8F0;
    --adm-shadow: 0 4px 12px rgba(0, 0, 0, 0.05);
    --adm-radius: 12px;

    /* 2. 기본 폰트 및 레이아웃 설정 */
    font-family: 'Pretendard', sans-serif;
    background-color: var(--adm-bg);
    color: var(--adm-text);
    min-height: 100vh;
    padding: 40px;
    display: flex;
    flex-direction: column;
}

/* =========================================
   [A] 공통 타이틀 영역
   ========================================= */
.admin-content-wrapper .admin-title-row {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-bottom: 24px;
}

.admin-content-wrapper .admin-page-title {
    font-size: 1.8rem;
    font-weight: 800;
    color: var(--adm-primary-dark);
    margin: 0;
    display: flex;
    align-items: center;
    gap: 12px;
}

.admin-content-wrapper .admin-page-title i {
    color: var(--adm-primary);
    font-size: 2rem;
}

/* =========================================
   [B] 대시보드 통계 카드 스타일 (★ 추가됨)
   ========================================= */

/* 1. 그리드 레이아웃 (기본 3분할) */
.admin-content-wrapper .admin-dashboard-grid {
    display: grid;
    grid-template-columns: 1fr 2fr 1fr; /* 좌/중/우 비율 */
    gap: 20px;
    margin-bottom: 30px;
}

/* 2. 통계 카드 공통 박스 */
.admin-content-wrapper .admin-stat-card {
    background: var(--adm-white);
    border: 1px solid var(--adm-border);
    border-radius: var(--adm-radius);
    box-shadow: var(--adm-shadow);
    padding: 24px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    /* ★ 중요: 차트(Recharts)가 flex 내에서 찌그러지지 않도록 최소 너비 0 설정 */
    min-width: 0; 
    height: 100%;
}

/* 카드 내부: 소제목 (아이콘 + 텍스트) */
.admin-content-wrapper .stat-header {
    color: var(--adm-sub-text);
    font-size: 14px;
    font-weight: 700;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    gap: 8px;
}

/* 카드 내부: 큰 숫자 값 표시 행 */
.admin-content-wrapper .stat-value-row {
    display: flex;
    align-items: baseline;
    gap: 10px;
}

.admin-content-wrapper .stat-value-big {
    font-size: 36px;
    font-weight: 800;
    color: var(--adm-text);
}

/* 카드 내부: 증가/감소 뱃지 (예: ▲ 12 today) */
.admin-content-wrapper .stat-badge {
    font-size: 13px;
    font-weight: 700;
    padding: 2px 8px;
    border-radius: 12px;
}
.admin-content-wrapper .stat-badge.success {
    background-color: #F0FFF4;
    color: #38A169;
}
.admin-content-wrapper .stat-badge.danger {
    background-color: #FFF5F5;
    color: #E53E3E;
}

/* 카드 내부: 하단 부가 설명 */
.admin-content-wrapper .stat-desc {
    margin-top: 10px;
    font-size: 13px;
    color: #A0AEC0;
}

/* =========================================
   [C] 공통 컨텐츠 박스 (테이블/폼 감싸기용)
   ========================================= */
.admin-content-wrapper .admin-common-box {
    background: var(--adm-white);
    border-radius: var(--adm-radius);
    box-shadow: var(--adm-shadow);
    border: 1px solid var(--adm-border);
    overflow: hidden;
    width: 100%;
}

/* 폼 화면 중앙 정렬용 레이아웃 래퍼 */
.admin-content-wrapper .admin-center-layout {
    display: flex;
    justify-content: center;
    width: 100%;
}